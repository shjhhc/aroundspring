<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC  "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shjh.springmvc.dao.UserDao">
	<select id="queryUser" parameterType="java.util.Hashtable" resultType="shjh.springmvc.domain.User">
		select * from user where user_name = #{userName} and password = #{password}
	</select>
	
	<select id="queryUserById" parameterType="java.util.Hashtable" resultType="shjh.springmvc.domain.User">
		select * from user where user_id = #{userId}
	</select>
	
	<select id="queryUserByName" parameterType="java.util.Hashtable" resultType="shjh.springmvc.domain.User">
		select * from user where user_name = #{userName}
	</select>
	
	<insert id="saveUser" parameterType="shjh.springmvc.domain.User" flushCache="true">
		insert into user values(#{userId}, #{userName}, #{password}, #{age}, #{create_date}, #{status})
	</insert>
</mapper>